{
  "name": "smartbuy-store",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production run-p type-check build-only",
    "preview": "vite preview",
    "serve:develop": "vite --mode development --port 3000",
    "serve:production": "vite --mode production",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:e2e": "npx cypress run --e2e",
    "test:e2e:dev": "npx cypress open --e2e --browser chrome",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "ci": "start-server-and-test build-only 'http-get://localhost:3000' preview"
  },
  "dependencies": {
    "vue": "3.3.4",
    "vue-router": "4.2.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "1.3.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "@tsconfig/node18": "2.0.1",
    "@types/jest": "^29.5.3",
    "@types/jsdom": "21.1.1",
    "@types/node": "18.16.19",
    "@vitejs/plugin-vue": "4.2.3",
    "@vitejs/plugin-vue-jsx": "3.0.1",
    "@vue/eslint-config-prettier": "7.1.0",
    "@vue/eslint-config-typescript": "11.0.3",
    "@vue/test-utils": "2.4.0",
    "@vue/tsconfig": "0.4.0",
    "autoprefixer": "10.4.14",
    "axios": "^1.4.0",
    "axios-mock-adapter": "^1.21.5",
    "cypress": "12.17.1",
    "eslint": "8.44.0",
    "eslint-plugin-cypress": "2.13.3",
    "eslint-plugin-vue": "9.15.1",
    "jsdom": "22.1.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.25",
    "prettier": "2.8.8",
    "start-server-and-test": "2.0.0",
    "tailwindcss": "3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4",
    "vite": "4.4.2",
    "vitest": "0.32.4",
    "vue-tsc": "1.8.4"
  }
}
